<%- include('partials/header') -%>

<body id="page-top">

<!-- ejs files starts -->
<div class="login-clean">
  <form action="/api/users" method="POST" id="register" onsubmit="return validateForm()" style="background-color: rgb(255, 255, 255); border-radius: 15px">
    
    <%- include('partials/messages') -%>

    <div class="illustration" style="margin-bottom: 20px">
      <img src="/img/Logo.png" style="width: 100px; height: 100px" />
    </div>
  
    <!-- Name -->
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required />
      <div class="error-message" id="name-error" style="color: red;"></div>
    </div>
  
    <!-- Employee ID -->
    <div class="form-group">
      <label for="employeeid">Employee ID</label>
      <input type="text" class="form-control" id="employeeid" name="employeeid" placeholder="213542" required/>
      <div class="error-message" id="employeeid-error" style="color: red;"></div>
    </div>

    <!-- Gender -->
    <div class="form-group">
      <label for="gender">Gender</label><br>
      <select type="text" class="form-control" id="gender" name="gender" required>
        <option value="">Select Gender</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
      </select>
      <div class="error-message" id="gender-error" style="color: red;"></div>
    </div>
  
    <!-- Date of Birth -->
    <div class="form-group">
      <label for="dob">Date of Birth</label>
      <input type="date" class="form-control" id="dob" name="dob" required/>
      <div class="error-message" id="dob-error" style="color: red;"></div>
    </div>

    <!-- Designation -->
    <div class="form-group">
      <label for="designation">Designation</label>
      <input type="text" class="form-control" id="designation" name="designation" required/>
      <div class="error-message" id="designation-error" style="color: red;"></div>
    </div>

    <!-- Contact -->
    <div class="form-group">
      <label for="department">Department</label>
      <input type="text" class="form-control" id="department" name="department" required/>
      <div class="error-message" id="department-error" style="color: red;"></div>
    </div>

    <!-- Appointment Date -->
    <div class="form-group">
      <label for="appointmentdate">Date of Appointment</label>
      <input type="date" class="form-control" id="appointmentdate" name="appointmentdate" required/>
      <div class="error-message" id="appointmentdate-error" style="color: red;"></div>
    </div>
  
    <!-- Password -->
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="********" required/>
      <div class="error-message" id="password-error" style="color: red;"></div>
    </div>
  
    <div class="form-group">
      <button class="btn btn-primary btn-block" type="submit"
        style="background-color: rgb(50, 185, 255);
          font-family: Roboto, sans-serif;
          border-radius: 10px;
          font-weight: semi-bold;">
        Register
      </button>

    </div>
  </form>
</div>

</body>
<script src="/myScripts/signup.js"></script>

<%- include('partials/footer') -%>


  